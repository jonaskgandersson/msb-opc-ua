{
    "server": {
        "endpointUrl": {
            "host": "opc.tcp//",
            "port": 4840
        },
        "options": {
            "endpoint_must_exist": false,
            "keepSessionAlive": true,
            "connectionStrategy": {
                "maxRetry": 10,
                "initialDelay": 2000,
                "maxDelay": 10000
            }
        },
        "session": {
            "parameters": {
                "requestedPublishingInterval": 100,
                "requestedLifetimeCount": 1000,
                "requestedMaxKeepAliveCount": 12,
                "maxNotificationsPerPublish": 100,
                "publishingEnabled": true,
                "priority": 10
            },
            "monitor": {
                "rootNode":{
                    "browseName": "RootFolder",
                    "nodeId" : null
                },
                "nodes": [
                    {
                        "browsePath" : "/Objects/Server/",
                        "nodeId": null
                    },
                    {
                        "browsePath" : null,
                        "nodeId": "ns=2;s=Real Devices"
                    }
                ]
            }
        }
    }
